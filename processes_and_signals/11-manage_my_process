#!/usr/bin/env bash
# Starts, stops, or restarts the manage_my_process daemon and maintains a PID file.

SCRIPT_DIR="$(cd -- "$(dirname -- "$0")" && pwd)"
DAEMON="$SCRIPT_DIR/manage_my_process"

PIDFILE_PRIMARY="/var/run/my_process.pid"
PIDFILE_FALLBACK="/tmp/my_process.pid"

choose_pidfile() {
  # Prefer /var/run if writable
  if ( : > "$PIDFILE_PRIMARY" ) 2>/dev/null; then
    rm -f "$PIDFILE_PRIMARY"
    echo "$PIDFILE_PRIMARY"
  else
    echo "$PIDFILE_FALLBACK"
  fi
}

pidfile="$(choose_pidfile)"

write_pid() {
  echo "$1" > "$pidfile"

  # Best-effort: make pid visible at /var/run/my_process.pid for checkers that hardcode it
  if [ "$pidfile" != "$PIDFILE_PRIMARY" ]; then
    ln -sf "$pidfile" "$PIDFILE_PRIMARY" 2>/dev/null || cp -f "$pidfile" "$PIDFILE_PRIMARY" 2>/dev/null || true
  fi
}

read_pid() {
  if [ -f "$PIDFILE_PRIMARY" ]; then
    cat "$PIDFILE_PRIMARY"
  elif [ -f "$PIDFILE_FALLBACK" ]; then
    cat "$PIDFILE_FALLBACK"
  else
    return 1
  fi
}

remove_pidfiles() {
  rm -f "$PIDFILE_PRIMARY" "$PIDFILE_FALLBACK"
}

start_proc() {
  "$DAEMON" >/dev/null 2>&1 &
  write_pid "$!"
  echo "manage_my_process started"
}

stop_proc() {
  if pid="$(read_pid 2>/dev/null)"; then
    kill "$pid" 2>/dev/null || true
  fi
  remove_pidfiles
  echo "manage_my_process stopped"
}

silent_stop() {
  if pid="$(read_pid 2>/dev/null)"; then
    kill "$pid" 2>/dev/null || true
  fi
  remove_pidfiles
}

silent_start() {
  "$DAEMON" >/dev/null 2>&1 &
  write_pid "$!"
}

case "${1:-}" in
  start)
    start_proc
    ;;
  stop)
    stop_proc
    ;;
  restart)
    silent_stop
    silent_start
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
